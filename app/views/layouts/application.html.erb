<!DOCTYPE html>
<html>
<head>
  <title>Wishlist</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= nav_bar :fixed => :top, :brand => "Wishlist" do %>
	   	<% menu_group do %>   
   			<%= menu_item "Home", root_path %>
			<% if current_user %>
   				<%= menu_item "Wishlist", wishes_path %>
				<% if current_user.admin %>
	   				<%= menu_item "Users", users_path %>
					<%= menu_item "Products", products_path %>	
				<% end %>
				<%= menu_item "Log out", logout_path %>
			<% else %>
			   	<%= menu_item "Log In", login_path %>
	   			<%= menu_item "Sign Up", signup_path %>
		   	<% end %>
		<% end %>
	<% end %>

	<div class ="container">
		<% flash.each do |name, msg| %>
		  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
		    <a class="close" data-dismiss="alert">Ã—</a>
		    <%= msg %>
		  </div>
		<% end %>
		<div class="span9"><%= yield %></div>
	</div>

</body>
</html>
